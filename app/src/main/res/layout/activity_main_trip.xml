<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trip"
    android:orientation="vertical"
    tools:context=".MainActivity_trip">

    <TextView
        android:id="@+id/trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/ZL"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="35sp" />

    <Button
        android:id="@+id/click1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#ffd600"
        android:onClick="openTwo"
        android:layout_marginRight="100sp"
        android:layout_marginLeft="100sp"
        android:text="@string/click_login"
        android:textColor="#212121"
        android:textSize="30sp" />

    <Button
        android:id="@+id/click3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="100sp"
        android:background="#ffd600"
        android:onClick="openOne"
        android:text="@string/mmm"
        android:textColor="#212121"
        android:textSize="30sp" />

    <Button
        android:id="@+id/click2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="300dp"
        android:onClick="openOne"
        android:text="@string/click2"
        android:textSize="15sp" />

</LinearLayout>